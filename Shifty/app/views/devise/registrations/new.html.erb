
<div align="center">
<%= stylesheet_link_tag "custom", :media => "all" %>
<!-- Main content -->
<div class="original_card_registration">
<h1>新規登録</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, "メールアドレス" ,style: "color:#000000; font-size:24px;"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :name, "本名(例.古川竜大)", style: "color:#000000; font-size:24px;"%> <br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :nickname, "ニックネーム(例.りゅうた)", style: "color:#000000; font-size:24px;"%> <br />
    <%= f.text_field :nickname %>
  </div>

  <div class="field">
    <%= f.radio_button :gender, :male, checked: true %>
    <%= f.label :gender, "男性", {value: 1, style: "display: inline-block; color:#000000; font-size:24px;"} %>
    <%= f.radio_button :gender, :female %>
    <%= f.label :gender, "女性", {value: 2, style: "display: inline-block; color:#000000; font-size:24px;"} %>
  </div>

  <div class="field">
    <%= f.radio_button :tencho_bool, :true, checked: true %>
    <%= f.label :tencho_bool, "店長", {value: :true, style: "display: inline-block; color:#000000; font-size:24px;"} %>
    <%# Trueなら店長 %>
    <%= f.radio_button :tencho_bool, :false %>
    <%= f.label :tencho_bool, "バイト", {value: :false, style: "display: inline-block; color:#000000; font-size:24px;"} %>
    <%# Falseならバイト %>
  </div>

  <div class="field">
    <%= f.label :miseinen, "生年月日", style: "color:#000000; font-size:24px;"%> <br />
    <%= f.date_select :miseinen,use_month_numbers: true,start_year: 1970, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1) %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード", style: "color:#000000; font-size:24px;" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード(確認用)" , style: "color:#000000; font-size:24px;"%><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>
<%#
<%= render "devise/shared/links" %>
</div>
</div>